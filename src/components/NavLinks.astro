---
// src/components/NavLinks.astro
export interface Props {
  classList: string;
}

const { classList } = Astro.props;
---

<a href="#our-solutions" class={classList}>Our Solutions</a>
<!-- <a href="#how-we-work" class={classList}>How We Work</a> -->
<a href="#out-team" class={classList}>Our Team</a>
<!-- <a href="#contact" class={classList}>Contact</a> -->

<script>
  // Add smooth scrolling behavior to all navigation links
  function initSmoothScrolling() {
    const navLinks = document.querySelectorAll('a[href^="#"]');
    
    navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        
        const targetId = link.getAttribute('href')?.substring(1);
        if (!targetId) return;
        
        const targetElement = document.getElementById(targetId);
        if (!targetElement) return;
        
        // Calculate header height for offset
        const header = document.querySelector('header');
        const headerHeight = header ? header.offsetHeight : 0;
        
        // Scroll to target with offset for fixed header
        const targetPosition = targetElement.offsetTop - headerHeight; // 20px extra padding
        
        window.scrollTo({
          top: targetPosition,
          behavior: 'smooth'
        });
      });
    });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initSmoothScrolling);
  
  // Re-initialize after navigation (for SPA-like behavior)
  document.addEventListener('astro:after-swap', initSmoothScrolling);
</script>
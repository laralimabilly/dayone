---
// src/components/Header.astro (Fixed)
import NavLinks from './NavLinks.astro';
import MobileNav from './MobileNav.tsx';
import { Image } from 'astro:assets';
import logo from '../assets/DayOne_Logo_Dark.png';

const classList = 'text-dark hover:text-accent transition-colors cursor-pointer text-sm xl:text-base font-medium';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-transparent backdrop-blur-sm border-b border-secondary/10">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8 py-3 sm:py-4 flex justify-between items-center">
    <!-- Logo -->
    <div class="flex items-center flex-shrink-0">
      <a href="/" aria-label="Day One Talent Advisory Home">
        <Image 
          src={logo} 
          alt="Logo Day One" 
          class="max-w-28 sm:max-w-32 lg:max-w-36 h-auto" 
        />
      </a>
    </div>
    
    <!-- Desktop Navigation -->
    <div class="hidden lg:flex space-x-6 xl:space-x-8">
      <NavLinks classList={classList} />
    </div>
    
    <!-- Desktop CTA Button -->
    <div class="hidden lg:block">
      <a 
        href="/#contact"
        class="bg-accent text-light hover:bg-white hover:text-dark transition-colors px-6 xl:px-8 py-2.5 xl:py-3 rounded-full font-medium cursor-pointer text-sm xl:text-base"
        title="Contact"
      >
        Contact
      </a>
    </div>
    
    <!-- Mobile menu -->
    <MobileNav client:load />
  </nav>
</header>

<style>
  /* Ensure header doesn't interfere with content */
  header {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }
  
  /* Mobile landscape adjustments */
  @media (max-height: 500px) and (orientation: landscape) {
    nav {
      padding-top: 0.5rem;
      padding-bottom: 0.5rem;
    }
    
    .max-w-28 {
      max-width: 6rem;
    }
    
    .max-w-32 {
      max-width: 7rem;
    }
  }
</style>